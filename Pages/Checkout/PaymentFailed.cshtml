@page "/payment-failed"
@model VapeBotApi.Pages.Checkout.PaymentFailedModel
@{
    Layout = null; // No layout for standalone view
    ViewData["Title"] = "Payment Failed";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payment Failed</title>
    <script src="https://telegram.org/js/telegram-web-app.js"></script>

    <style>
        html { font-size: 100%; }
        body {
            font-family: sans-serif;
            text-align: center;
            padding: 2rem;
            background-color: #ffffff;
            font-size: 1.25rem;
            line-height: 1.6;
            color: #333;
        }

        h1 {
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        p {
            margin-bottom: 1.5rem;
        }

        button {
            padding: 1rem 1.5rem;
            font-size: 1.25rem;
            border: none;
            border-radius: 0.5rem;
            background-color: #0088cc;
            color: white;
            cursor: pointer;
        }

        button:active {
            opacity: 0.8;
        }
    </style>
</head>
<body>
    <h1>Payment Failed</h1>
    <p>Your payment was unsuccessful. To try again, close this window, press the <b>â˜° Menu</b> button and select <code>/checkout</code> from the menu and proceed through checkout again and select the payment option you would like to use.</p>
    <button id="close-btn">ðŸ”’ Close WebApp</button>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const tg = window.Telegram.WebApp;
            tg.ready();
            tg.expand?.();

            document
                .getElementById('close-btn')
                .addEventListener('click', () => tg.close());
        });
    </script>
</body>
</html>
