<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] â€“ VapeBot</title>

    <!-- Bootstrap 5 CSS -->
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
        rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
        crossorigin="anonymous">

    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
</head>
<body>
    @* <header class="bg-dark text-white py-3 mb-4">
        <div class="container">
            <h1 class="h3 mb-0">VapeBot Admin</h1>
        </div>
    </header> *@

    <main class="container">
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3 mt-5">
        <div class="container">
            <small>
                &copy; @DateTime.Now.Year
                <a href="https://t.me/SydVape_bot">SydVapeBot</a>
            </small>
        </div>
    </footer>


    <!-- Bootstrap 5 JS Bundle (Popper + JS) -->
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
        crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)

    <!-- Telegram WebApp SDK -->
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const tg = window.Telegram.WebApp;
            tg.ready();
            tg.expand?.();

            const closeBtn = document.getElementById('close-btn');
            if (closeBtn) {
                closeBtn.addEventListener('click', () => tg.close());
            }
        });
    </script>

</body>
</html>

